@model AuctionApplication.ViewModels.CreateBidVM

@{
    ViewData["Title"] = "CreateBid";
}

<h1>CreateBid</h1>

<h4>Place a bid</h4>
<h6 class="text-warning">Amount must be greater than the highest bid (@Model.HighestBidAmount)</h6>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateBid" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AuctionId"/>
            <input type="hidden" asp-for="HighestBidAmount"/>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" readonly />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Amount" class="control-label"></label>
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
                <br/><br/>
                <button type="submit" class="btn btn-primary">Place Bid</button>
            </div>
            <br />
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
